# Annam AI Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Database Configuration  
DATABASE_URL=sqlite:///./annam_ai.db

# Authentication
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Weather API (NASA POWER is free, no key needed)
# OpenWeatherMap API (optional, requires free signup)
OPENWEATHER_API_KEY=your-openweather-api-key

# Model Paths
MODEL_BASE_PATH=./data/models/

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/annam_ai.log

# Deployment
ENVIRONMENT=development
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Hugging Face Hub (optional, for model sharing)
HUGGINGFACE_TOKEN=your-hf-token-here
